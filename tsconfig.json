{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    // "lib": ["ES2021"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // "module": "CommonJS",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    // "target": "es2019"
    "target": "ESNext",

    "strict": true,
    "paths": {
      "types/*": ["types/*"],
      "app/*": ["app/*"],
      "infra/*": ["infra/*"]
    }
  }
}
